<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="25dp"
	android:background="@drawable/background_circleangle">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="标题"
		android:textColor="#ff5d51b1"
		android:id="@+id/dialog_inputs_layoutTextView_title"
		android:textAppearance="?android:attr/textAppearanceLarge"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:layout_marginTop="3dp"
		android:visibility="gone"
		android:id="@+id/dialog_inputs_layoutTextView_subtitle"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/dialog_inputs_layoutLinearLayout_container"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:gravity="center_vertical">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1">

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/dialog_inputs_layoutButton3"
				android:visibility="invisible"
				style="@style/MyDialogButton"
				android:text="Button3"/>

		</LinearLayout>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/dialog_inputs_layoutButton2"
			android:visibility="invisible"
			style="@style/MyDialogButton"
			android:text="Button2"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/dialog_inputs_layoutButton1"
			android:visibility="invisible"
			style="@style/MyDialogButton"
			android:text="Button1"/>

	</LinearLayout>

</LinearLayout>

